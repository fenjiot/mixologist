<h5><%= recipe_ingredient.name.upcase %></h5>
<%= form_for [recipe_ingredient.recipe, recipe_ingredient] do |form| %>
  <div>
    <%= form.label :qty %>
    <%= form.text_field :qty, value: measure_for_field(recipe_ingredient.qty,
                                             recipe_ingredient.unit_of_measure) %>
  </div>

  <div>
    <% units_of_measure = RecipeIngredient.valid_units_of_measure %>
    <%= form.select :unit_of_measure, units_of_measure %>
  </div>

  <%= form.submit "Edit ingredient quantity" %>
<% end %>

<%= button_to "Remove ingredient", [recipe_ingredient.recipe, recipe_ingredient], method: :delete %>
