<%= form_for [list, ListRecipe.new] do |form| %>
  <div>
    <h5><%= form.label "Recipe" %></h5>
    <%= form.select :recipe_id,
      options_from_collection_for_select(barback.recipes_to_add, "id", "name") %>
  </div>

  <div>
    <%= form.label :quantity %>
    <%= form.text_field :quantity %>
  </div>

  <%= form.submit "Add recipe to list" %>
<% end %>
