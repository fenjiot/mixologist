<% if signed_in? %>
  <h3><%= link_to "Add new recipe", new_recipe_path %></h3>
  <br />
<% end %>

<h3>Cocktails</h3>
<ul>
  <% @recipes.each do |recipe| %>
    <li>
      <%= link_to recipe.name, recipe_path(recipe) %>
      - ingredients: <%= recipe.ingredients.count %>
    </li>
  <% end %>
</ul>
