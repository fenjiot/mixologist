<h2>Edit <%= link_to @recipe.name, @recipe %></h2>

<div class="underscore-box">
  <%= render "recipes/form", recipe: @recipe %>
</div>

<h3>Ingredients - edit</h3>
<div class="underscore-box">
  <% if @recipe.recipe_ingredients.present? %>
    <% @recipe.recipe_ingredients.order("qty DESC").each do |ingredient| %>
      <%= render "recipe_ingredients/edit_form", recipe_ingredient: ingredient %>
      <br />
    <% end %>
  <% else %>
    There are no ingredients associated with this recipe.
  <% end %>
</div>

<h3>Add ingredient</h3>
<div class="underscore-box">
  <%= render "recipe_ingredients/add_form", recipe: @recipe, bartender: @bartender %>
</div>

<h3>Suggest a new ingredient:</h3>
<div class="underscore-box">
  <%= form_for Ingredient.new do |form| %>
    <div>
      <%= form.label :name %>
      <%= form.text_field :name %>
    </div>

    <%= form.submit %>
  <% end %>
</div>
